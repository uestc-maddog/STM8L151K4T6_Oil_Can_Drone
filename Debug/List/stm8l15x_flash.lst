    318          
    319            /* Calculates the number of bytes */
    320            temp = (uint16_t)((uint16_t)OPT->UBC * (uint16_t)128);
    321          
    322            /* Correction because size upper 8kb doesn't exist */
    323            if (OPT->UBC > 0x7F)
    324            {
    325              temp = 8192;
    326            }
    327          
    328            /* Return value */
    329            return(temp);
